<h1>@<%= @user.username %>'s Profile &amp; Tweets</h1>

<p><%= @user.name %></p>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>

<p>
    <% if current_user.following.include?(@user.id) %>
        <%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-primary", id: "unfollow_btn" %>
    <% else %>
        <% if current_user.id != @user.id %>
	    <%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
	<% end %>
    <% end %>
</p>

<% @user.tweets.each do |tweet| %>
    <div>
        <p>@<%= @user.username %> - <%= tweet.message.html_safe %></p>
    </div>
<% end %>

<h3>Number of followers: <%= @followers.size %></h3>

<h3>Number of users this user is following: <%= @following.size %></h3>